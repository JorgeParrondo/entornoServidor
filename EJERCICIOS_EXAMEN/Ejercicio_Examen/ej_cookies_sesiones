<?php
// ======================================================
// 1ï¸âƒ£ INICIO DE SESIÃ“N
// ======================================================
// Es necesario iniciar la sesiÃ³n al principio del script
// para poder usar la variable global $_SESSION
session_start();


// ======================================================
// 2ï¸âƒ£ GESTIÃ“N DE COOKIE (Contador de visitas)
// ======================================================

// Si existe la cookie 'visitas', la aumentamos en 1
if (isset($_COOKIE['visitas'])) {
    $visitas = $_COOKIE['visitas'] + 1;
} else {
    // Si no existe, es la primera visita
    $visitas = 1;
}

// Guardamos la cookie de nuevo con la nueva cantidad de visitas
// time() + 7*24*60*60  â†’  DurarÃ¡ 7 dÃ­as
setcookie('visitas', $visitas, time() + 7 * 24 * 60 * 60);


// ======================================================
// 3ï¸âƒ£ GESTIÃ“N DE SESIÃ“N (Nombre de usuario)
// ======================================================

// Si el usuario ha enviado el formulario con su nombre
if (isset($_POST['nombre'])) {
    // Guardamos el nombre en una variable de sesiÃ³n
    $_SESSION['usuario'] = $_POST['nombre'];
}

// Si el usuario pulsa el botÃ³n de "Cerrar sesiÃ³n"
if (isset($_POST['cerrar'])) {
    // Destruimos la sesiÃ³n (borra todos los datos de $_SESSION)
    session_destroy();
    // Redirigimos a la misma pÃ¡gina para limpiar el contenido
    header("Location: ".$_SERVER['PHP_SELF']);
    exit;
}

?>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Ejemplo de Sesiones y Cookies</title>
    <style>
        body { font-family: Arial; background: #f9f9f9; text-align: center; margin-top: 50px; }
        .caja { background: #fff; display: inline-block; padding: 20px; border-radius: 10px; box-shadow: 0 0 5px #aaa; }
        input[type="text"] { padding: 5px; }
        button { padding: 5px 10px; margin-top: 10px; }
    </style>
</head>
<body>

<div class="caja">
    <h1>ðŸ‘‹ Ejemplo de Sesiones y Cookies</h1>

    <?php if (isset($_SESSION['usuario'])): ?>
        <!-- Si hay usuario en la sesiÃ³n, lo saludamos -->
        <p>Bienvenido de nuevo, <strong><?= htmlspecialchars($_SESSION['usuario']) ?></strong>!</p>
        <p>Has visitado esta pÃ¡gina <strong><?= $visitas ?></strong> veces.</p>

        <!-- BotÃ³n para cerrar la sesiÃ³n -->
        <form method="post">
            <button type="submit" name="cerrar">Cerrar sesiÃ³n</button>
        </form>

    <?php else: ?>
        <!-- Si no hay sesiÃ³n, mostramos el formulario para introducir el nombre -->
        <p>Es tu visita nÃºmero <strong><?= $visitas ?></strong>.</p>
        <p>Por favor, introduce tu nombre para comenzar:</p>
        <form method="post">
            <input type="text" name="nombre" required placeholder="Tu nombre">
            <button type="submit">Entrar</button>
        </form>
    <?php endif; ?>
</div>

</body>
</html>
